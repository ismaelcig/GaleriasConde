<metro:Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Elysium.Controls;assembly=Elysium"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:metro="http://schemas.codeplex.com/elysium"
        xmlns:params="http://schemas.codeplex.com/elysium/params"
        xmlns:User_Controls="clr-namespace:Galeria.User_Controls"
        params:Design.Theme="Light"
        params:Manager.Theme="Light"
        params:Manager.AccentBrush="BlueViolet"
        params:Manager.ContrastBrush="BlanchedAlmond"
        TextElement.FontWeight="Bold"
        TextElement.FontSize="15"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        params:Window.CloseButtonToolTip="{DynamicResource CloseApp}"
        params:Window.MaximizeButtonToolTip="{DynamicResource MaximizeApp}"
        params:Window.MinimizeButtonToolTip="{DynamicResource MinimizeApp}"
        
        WindowStartupLocation="CenterOwner"
        x:Class="Galeria.Windows.C_Galeria"
        Title="{DynamicResource CGtitle}" Height="480" MinHeight="480" Width="742" MinWidth="742" Closing="Window_Closing">

    <Controls:Window.Resources>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
    </Controls:Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.RowSpan="2">
            <TabItem x:Name="Pst1" Header="{DynamicResource CGpst1}">
                <Grid>
                    <DockPanel x:Name="docky" Background="IndianRed" LastChildFill="True" HorizontalAlignment="Left" Margin="10,10,5,10" VerticalAlignment="Stretch" Width="200" Panel.ZIndex="10">
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="40" DockPanel.Dock="Top">
                            <StackPanel Orientation="Horizontal" Background="WhiteSmoke">
                                <Label x:Name="label" Content="{DynamicResource CG1Filter}" FontSize="20"  Width="130"/>
                                <!--Tiene que haber otra forma de colocar esto-->
                                <Button x:Name="button" Content="&lt;-" Height="40" VerticalAlignment="Top" Width="70" HorizontalAlignment="Right" Click="button_Click"/>
                            </StackPanel>
                        </Border>
                        <TextBox x:Name="txtSearchArt" Height="39" DockPanel.Dock="Bottom"  Text="" VerticalAlignment="Bottom" Width="200" materialDesign:HintAssist.Hint="{DynamicResource CG1Search}" materialDesign:HintAssist.FloatingScale="0.8" materialDesign:HintAssist.IsFloating="False" Background="White" params:Design.AccentBrush="Black" />

                        <Border BorderThickness="1" BorderBrush="Black"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                            <ScrollViewer Background="Wheat" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="spFilter" Orientation="Vertical" >
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                    <Button Content="ZZZZZZZZZZZZZZ" Margin="5"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </DockPanel>
                    <!--Mostrar obras-->
                    <User_Controls:AnimatedWrapPanel x:Name="awpArtworks" Background="Gainsboro" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="210,10,10,10"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Pst2" Header="{DynamicResource CGpst2}">
                <Grid>
                    <!--Mostrar Autores-->
                    <TextBox x:Name="txtSearchAuth" Height="39" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Width="200" materialDesign:HintAssist.Hint="{DynamicResource CG1Search}" materialDesign:HintAssist.FloatingScale="0.8" materialDesign:HintAssist.IsFloating="False" Background="White" params:Design.AccentBrush="Black" />
                </Grid>
            </TabItem>
            <TabItem x:Name="Pst3" Header="{DynamicResource CGpst3}" >
                <Grid Background="IndianRed">
                    <!--Mostrar Mensajes-->
                    <StackPanel x:Name="spConv" HorizontalAlignment="Left" Width="299" VerticalAlignment="Stretch" Orientation="Vertical" Margin="10,10,0,10" Background="Aqua"/>
                    <StackPanel x:Name="spChat" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical" Margin="311,10,10,10" Background="Beige"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Pst4" Header="{DynamicResource CGpst4}" >
                <Grid>
                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" Margin="10,36,10,10" VerticalAlignment="Stretch" />
                    <!--Mostrar Ventana Admin-->

                </Grid>
            </TabItem>
            <TabItem x:Name="Pst5" Header="{DynamicResource CGpst5}" >
                <Grid>
                    <!--Mostrar Informes-->
                    <TextBlock><Run Text="Mostrar Informes"/></TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="spPerfil" Orientation="Horizontal" Grid.RowSpan="1" Background="Aquamarine" HorizontalAlignment="Right" Width="230">
            <User_Controls:LanguageSelector x:Name="languageSelector" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button x:Name="userButton" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="100" Height="36" Padding="2" Background="LightSkyBlue" Click="userButton_Click">
                <Viewbox>
                    <TextBlock x:Name="tbNick" Text="nick" IsHitTestVisible="False" Foreground="Black"/>
                </Viewbox>
            </Button>


        </StackPanel>

        <!--Grid para oscurecer todo, mientras se muestra algo por encima-->
        <Grid x:Name="shadow" Visibility="Hidden" Panel.ZIndex="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.RowSpan="2" MouseUp="shadow_MouseUp">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.85">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF7A7171" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <!--Grid para mostrar algo por encima de shadow-->
        <Grid x:Name="show" Visibility="Visible" Panel.ZIndex="100" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.RowSpan="2"/>
    </Grid>
</metro:Window>