<UserControl x:Class="Galeria.User_Controls.AuthorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galeria.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="450">
    <Border BorderBrush="Black" BorderThickness="2" Height="Auto" Width="450">
        <Grid Background="AntiqueWhite">
            <Label x:Name="lblName" Content="Nombre Real" FontSize="18" FontWeight="Medium" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblArtName" Content="Nombre Artístico" FontSize="17" FontWeight="DemiBold" FontStyle="Italic"  HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="tbDescr" HorizontalAlignment="Left" Margin="25,72,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

        </Grid>
    </Border>
</UserControl>
