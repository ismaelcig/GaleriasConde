<UserControl x:Class="Galeria.User_Controls.HintComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galeria.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="158">
    <Grid Background="White">
        <ComboBox x:Name="comboBox" FontWeight="DemiBold" FontSize="18" BorderThickness="0,0,0,1" VerticalContentAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" SelectionChanged="comboBox_SelectionChanged"/>
        <TextBlock x:Name="hintTB" Margin="3,0,0,1" FontStyle="Italic" FontWeight="DemiBold" FontSize="15" Opacity="0.3" Text="Something" VerticalAlignment="Bottom" IsHitTestVisible="False"/>

    </Grid>
</UserControl>
