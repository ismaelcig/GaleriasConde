<UserControl x:Class="Galeria.User_Controls.HintPassBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galeria.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="150">
    <Grid>
        <PasswordBox x:Name="passBox" FontWeight="DemiBold" FontSize="18" BorderThickness="0,0,0,1" HorizontalAlignment="Stretch" VerticalContentAlignment="Bottom" Password="" VerticalAlignment="Stretch" PasswordChanged="passBox_PasswordChanged"/>
        <TextBlock x:Name="hintTB" Margin="3,0,0,1" FontStyle="Italic" FontSize="15" FontWeight="DemiBold" Opacity="0.3" Text="Something" VerticalAlignment="Bottom" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
